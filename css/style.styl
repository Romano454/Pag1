.bar-top
    background-color #00adef
    ul
        display inline-block
        list-style-type none
        margin 0px
        li
            float left
            color #f0f0f0
            a
                color blanco !important
                display block
                padding 8px
                transition(.4s)
                &:hover
                    opacity(1)
