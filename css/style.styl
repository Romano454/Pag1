blanco = #fff
naranja = #D35400
amarillo = #F1C40F
gris = #34495E

transition(n)
   -webkit-transition: all n ease-in-out;
   -moz-transition: all n ease-in-out;
   -ms-transition: all n ease-in-out;
   -o-transition: all n ease-in-out;
   transition: all n ease-in-out;

opacity(n)
    -webkit-opacity: n;
    -moz-opacity: n;
    opacity: n;
body
    font-family: 'Open Sans', sans-serif;
    font-size: 14px;
.navbar
    background-color #fff
    border-radius 0px
    margin-bottom 0px
    min-height 74px

.customnavbar
    ul
        li
            a
                color #00adef !important
                text-transform uppercase
                transition(.4s)
                &:hover
                    background-color  #00adef !important
                    color blanco !important
                    opacity(1)

    .navbar-right
        margin-top 10px
        .input-group
            a
                color #00adef !important
                &:hover
                    background-color  #ccc !important
                    color #00adef !important

#input-src
    display none
    max-width 200px
    width 0px

#div-src
    display none
    margin-top 8px
    margin-botton 4px

#btn-src
    display none

.homebox
    margin-top 16px
    width 100%
    .icon
        display inline-block
        width 15%
        margin-right 5%
        img
            width 100%
    .desc
        float left
        width 80%
        .title
            display block
